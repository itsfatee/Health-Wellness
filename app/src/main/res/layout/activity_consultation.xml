<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_padding"
    tools:context="com.esmt.controller.healthwellness.AddAppointActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultation"
        android:textColor="@color/colorDark"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/size_title"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_top"
        android:hint="@string/last_name"
        android:id="@+id/UserLName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_top"
        android:hint="@string/first_name"
        android:id="@+id/UserFName"/>


    <EditText
        android:id="@+id/DocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_top"
        android:ems="10"
        android:hint="Doctor Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserDesc"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="10"
        android:minLines="5"
        android:scrollbars="vertical"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_top"
        android:background="@color/colorPrimaryDark"
        android:text="ADD"
        android:id="@+id/btnConsult"/>

</LinearLayout>